<UserControl
    x:Class="FEApp.Controls.OperationBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid Background="{ThemeResource SystemControlAcrylicElementBrush}" Opacity="0.9"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
            <TextBlock x:Name="OperationName" Text="Placeholder" Style="{StaticResource BaseTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <muxc:ProgressBar IsIndeterminate="True" Width="350" Foreground="{ThemeResource SystemAccentColor}"/>
            <TextBlock x:Name="OperationInfo" Text="This operation may take a long time." Opacity="0.6" HorizontalAlignment="Center" Style="{StaticResource CaptionTextBlockStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
